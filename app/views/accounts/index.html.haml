%h1 Accounts

%table.table
  %tr
    %th Name
    %th Aws account
    %th

  - @accounts.each do |account|
    %tr
      %td= account.name
      %td= account.aws_account_id
      %td
        = link_to 'Show', account
        |
        = link_to 'Edit', edit_account_path(account)
        |
        = link_to 'Destroy', account, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Account', new_account_path, class: 'btn btn-primary'
